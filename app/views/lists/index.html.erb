
 <div class="top_page">
    <div class="list_wrapper">
      <% @lists.each do |list|%>
        <div class="list">
          <div class="list_header">
            <div class="list_header_title"><%= list.title%></div>
           <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>
           <%= link_to(content_tag(:i, '', class: 'fas fa-trash'), list_path(list),method: :delete ,data: {confirm: "#{list.title}を削除しますか？"})  %>
         </div>
          <div class="card_wrapper">
            <%list.cards.each do |card|%>
            <div class="card"> 
            <div class="card_title"><%=card.title%>
            <%= link_to(content_tag(:i, '',class: 'fas fa-info-circle'),list_card_path(list,card) )%>
            </div>
         </div> 
            <% end %>
        </div>  

      
    
       <div class="card_add">
        <i class="far fa-plus-square"></i>
        <%= link_to "カードを追加する", new_list_card_path(list)%>
       </div>
      </div> 
      <%end%> 
    </div>
 </div>  



  

