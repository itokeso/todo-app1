<div class="sinupPage">
  <div class="titleArea">
    <h1 class="text-center my-5  h1">アカウントを新規作</h1>
    <div class="mb-5 text-center h2">or</div>
    <%= render "devise/shared/links"%>
  </div>
  <div class='container'>
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-5, signupForm" }, local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group my-4 ">
        <%= f.label :お名前 %>
        <%= f.text_field :name, class: "form-control my-2 required",id:"name", placeholder: "名前を入力してください" %>
        <span class = error_required></span>
        <span class = error_name></span>
      </div>

      <div class="form-group mb-4">
         <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: "form-control my-2 required", id: "mail", placeholder: "emailを入力してください" ,autocomplete: "email" %>
        <span class = error_required></span>
        <span class = error_mail></span>
      </div>

      <div class="form-group mb-4">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control my-2 required", id: "pass", placeholder:"パスワードを入力してください", autocomplete: "off" %>
        <span class = error_required></span>
        <span class = error_pass></span>
      </div>


      <div class="form-group mb-4">
        <%= f.label :パスワード（確認） %>
        <%= f.password_field :password_confirmation, class:"form-control my-2 required", id: "pass2", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
        <span class = error_required></span>
        <span class = error_pass2></span>
      </div>
      <div class="text-center ">
        <%= f.submit "アカウントを作成", class: "btn btn-primary my-4", id: 'form'%>
      </div>
    <% end %>
  </div>
</div>